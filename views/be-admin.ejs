<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head', {title: title}); -%>
</head>

<body>
  <header>
    <%- include('./partials/header.ejs', {user: user}); -%>
  </header>
  <div class="container space div-pub">
    <% if (user) {%>
    <% if(user.isAdmin == false) {%>
      <h1><%= user.username %></h1>
      <form action="/be-admin" method="post">
        <p><Label for="codeAdmin">Secret Code Admin</Label></p>
        <p><input type="password" name="codeAdmin" id="codeAdminId"></p>
        <button class="btn btn-primary">Be Admin</button>
      </form>
    <% } if(user.isAdmin == true) {%>
      <form action="/log-out-admin" method="post" class="text-center">
        <p>Are you Sure to want to log out ?</p>
        <button class="btn btn-primary">Log out Admin</button>
      </form>
    <% } %>
    <% } else { %>
        <%- include('./partials/log-in.ejs'); -%>
    <%}%>
    <%- include('./partials/errors.ejs'); -%>
  </div>
  <footer class="bg-dark">
    <%- include('./partials/footer.ejs'); -%>
  </footer>
</body>

</html>