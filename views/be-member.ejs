<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head', {title: title}); -%>
</head>

<body>
  <header>
    <%- include('./partials/header.ejs', {user: user}); -%>
  </header>
  <div class="container div-pub space">
    <% if(user) {%>
      <% if (user.isMember == false) {%>
        <h2><%= title %></h2>
        <form action="/be-member" method="post">
          <p><Label for="codeVIP">Secret Code</Label></p>
          <p><input type="password" name="codeVIP" id="codeVIPId"></p>
          <button class="btn btn-primary">Be Member</button>
        </form>
        <% } if (user.isMember == true) {%> 
          <form action="/log-out-member" method="post" class="text-center">
            <p>Are you Sure to want to log out ?</p>
            <button class="btn btn-primary">Log out Member</button>
          </form>
        <% } %>
    <% } else { %>
      <%- include('./partials/log-in.ejs'); -%>
    <%}%>
    <%- include('./partials/errors.ejs'); -%>
  </div>
  <footer class="bg-dark">
    <%- include('./partials/footer.ejs'); -%>
  </footer>
</body>

</html>